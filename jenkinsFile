pipeline{
    agent any
    stages{
        stage('Checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/slimshadow2/StudentRegistryAppDemo'
            }
        }

        stage('Install Dependecies'){
            steps{
                script{
                    bat 'npm install'
                }
                }
            }
        stage ('Start application'){
            steps{
                script{
                    bat 'start /b npm start'
                }
            }
        }
        stage ('Run Tests'){
            steps{
                script{
                     bat 'start npm test' 
                }      
            }
        }
    }

        post{
            always{
                echo "CI Pipline completed"
            }
        }
}