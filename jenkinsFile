pipeline{
    agent any

    enviroment{
        node_versions = "v20.17.0"
    }

    tools{
        nodejs "${node_versions}"
    }
    stages{
        stage("Checkout"){
            steps{
                git branch: 'main', url: 'https://github.com/slimshadow2/StudentRegistryAppDemo'
            }
        }

        stage("Install Dependecies"){
            steps{
                script{
                    bat 'npm install'
                }
                }
            }
        }
        stage ("Start application and run tests"){
            steps{
                script{
                    bat 'npm start &'
                    bat 'wait-on https://localhost:8090'
                    bat 'npm test'
                }
            }
        }
    }

        post{
            always{
                echo "CI Pipline completed"
            }
        }
    }
}